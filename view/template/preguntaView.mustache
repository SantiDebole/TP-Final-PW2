
<div class="flex-grow-1 ">


<div class="container mt-5 ">
    <!-- Encabezado h2 -->

    <h1 class="mb-4">PUNTAJE: {{puntaje}}</h1>
    {{#pregunta}}
    <div class="p-4 bg-light rounded shadow-sm">
        <h2 class="mb-4">{{pregunta.descripcion}}</h2>

                <!-- Formulario con checkbox -->
                <form action="/partida/responder" method="post">
                    {{#respuestas}}
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" id="{{idRta}}" name="idRespuesta" value="{{idRta}}">
                            <label class="form-check-label" for="{{idRta}}">
                                {{respuesta}}
                            </label>
                        </div>
                    {{/respuestas}}
                    <input type="hidden" name="idPregunta" value="{{pregunta.idPregunta}}">
                    <!-- BotÃ³n submit -->
                    <button type="submit" class="btn btn-primary">Responder</button>
                </form>
        <div id="contador"></div>
                <!-- Enlace de reporte -->
                <div class="mt-3">
                    <a href="#" class="text-danger">Reportar pregunta</a>
                </div>
            </div>
        {{/pregunta}}

    </div>


</div>
<script>
    let contador = {{tiempoRestante}};

    function actualizarContador() {
        contador--;
        document.getElementById('contador').textContent = contador;
        if(contador==0) document.querySelector('form').submit();
    }

    // Actualiza el contador cada segundo
    setInterval(actualizarContador, 1000);
</script>
