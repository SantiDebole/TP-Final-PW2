<div class="flex-grow-1">
    <div class="container mt-5">
        <!-- Botón de regreso al lobby -->
        <div class="d-flex justify-content-start mb-3">
            <a href="/lobby/listar" class="btn btn-info">Volver al lobby</a>
        </div>

        <!-- Título de la página -->
        <h1 class="text-center mb-5">Ranking</h1>

        <!-- Contenedor de tablas -->
        <div class="d-flex flex-wrap justify-content-center gap-4">
            <!-- Tabla: Top 10 Mejores Jugadores -->
            <div class="table-responsive m-3" style="max-width: 500px;">
                <h4 class="text-center">Top 10 Mejores Jugadores</h4>
                <table class="table table-hover table-bordered table-striped align-middle">
                    <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">Usuario</th>
                        <th scope="col">Promedio de Puntaje</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#top10MejoresJugadores}}
                        <tr class="text-center">
                            <td><a href="/lobby/verRivalPorQR/{{usuario}}">{{usuario}}</a></td>
                            <td>{{promedio_respuestas}}</td>
                        </tr>
                    {{/top10MejoresJugadores}}
                    </tbody>
                </table>
            </div>

            <!-- Tabla: Top 10 por Suma de Puntaje -->
            <div class="table-responsive m-3" style="max-width: 500px;">
                <h4 class="text-center">Top 10 por Suma de Puntaje</h4>
                <table class="table table-hover table-bordered table-striped align-middle">
                    <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">Usuario</th>
                        <th scope="col">Puntaje</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#topPuntosTotales}}
                        <tr class="text-center">
                            <td><a href="/lobby/verRivalPorQR/{{usuario}}">{{usuario}}</a></td>
                            <td>{{puntaje_total}}</td>
                        </tr>
                    {{/topPuntosTotales}}
                    </tbody>
                </table>
            </div>

            <!-- Tabla: Top 10 Partidas Históricas -->
            <div class="table-responsive m-3" style="max-width: 500px;">
                <h4 class="text-center">Top 10 de Partidas Históricas</h4>
                <table class="table table-hover table-bordered table-striped align-middle">
                    <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">Usuario</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Puntaje</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#topPartidasHistorico}}
                        <tr class="text-center">
                            <td><a href="/lobby/verRivalPorQR/{{usuario}}">{{usuario}}</a></td>
                            <td>{{fecha_partida}}</td>
                            <td>{{puntaje_total}}</td>
                        </tr>
                    {{/topPartidasHistorico}}
                    </tbody>
                </table>
            </div>

            <!-- Tabla: Top 10 Partidas del Mes -->
            <div class="table-responsive m-3" style="max-width: 500px;">
                <h4 class="text-center">Top 10 Partidas del Mes</h4>
                <table class="table table-hover table-bordered table-striped align-middle">
                    <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">Usuario</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Puntaje</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#topPartidasDelMes}}
                        <tr class="text-center">
                            <td><a href="/lobby/verRivalPorQR/{{usuario}}">{{usuario}}</a></td>
                            <td>{{fecha_partida}}</td>
                            <td>{{puntaje_total}}</td>
                        </tr>
                    {{/topPartidasDelMes}}
                    </tbody>
                </table>
            </div>

            <!-- Tabla: Top 10 Partidas de la Semana -->
            <div class="table-responsive m-3" style="max-width: 500px;">
                <h4 class="text-center">Top 10 Partidas de la Semana</h4>
                <table class="table table-hover table-bordered table-striped align-middle">
                    <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">Usuario</th>
