<div class="flex-grow-1 ">
<div class="container mt-5 mb-5 bg-light">
    {{#lobby}}
        <a href="/login/logout">Logout</a>
        <br>
        <a href="/perfil/mostrarPerfil">Ir a mi perfil</a>
        <h1>Bienvenido usuario con el id: {{loggedUserId}}</h1>
        <h2>Usuario: {{username}}</h2>



        <h2>tipo usuario: {{rol}}</h2>

    {{/lobby}}

    {{#isAdmin}}
        <h2>Rol Administrador</h2>
        <a href="#">Dashboard Admin</a>
        <br>
        <a href="#">Gestionar Preguntas</a>
    {{/isAdmin}}

    {{#isEditor}}
        <h2>Editor</h2>
        <a href="#">Dashboard Editor</a>
        <br>
        <a href="#">Reportar Preguntas</a>
    {{/isEditor}}

    {{#isPlayer}}

        <a href="/partida/jugar">Jugar</a>
        <br>
        <a href="/lobby/mis_partidas">Mis Partidas</a>
        <br>
        <form action="/lobby/verRival" method="post" enctype="multipart/form-data" class="row g-3 needs-validation" novalidate>
           <div>
            <label for="usuarioBuscado" class="form-label">Ingrese nombre de usuario que desea buscar</label>
            <input type="text" class="form-control" id="usuarioBuscado" name="usuarioBuscado" >
            <button class="btn btn-primary" type="submit">Buscar</button>
           </div>
        </form>
        <a href="#">Ver ranking</a>
    {{/isPlayer}}
</div>





</div>
