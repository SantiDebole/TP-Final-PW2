<h1 class="text-center my-4">Preguntas Reportadas</h1>

<div class="container">
    <div class="row justify-content-center">
        {{#preguntasReportadas}}
            <div class="col-md-8 mb-4">
                <div class="card">
                    <div class="card-header">
                        <strong>Reporte ID:</strong> {{id_reporte}}
                    </div>
                    <div class="card-body">
                        <p><strong>Texto del Reporte:</strong> {{texto_reporte}}</p>
                        <p><strong>Usuario:</strong> {{nombre_usuario}} (ID: {{id_usuario}})</p>
                        <p><strong>Pregunta:</strong> {{descripcion}} (ID: {{id_pregunta}})</p>

                        <!-- Mostrar las respuestas asociadas a esta pregunta -->
                        <p><strong>Respuestas:</strong></p>
                        <ul class="list-unstyled">
                            {{#respuestas}}
                                <li class="mt-2 p-2
                                    {{#es_correcta}}bg-success{{/es_correcta}}
                                    {{^es_correcta}}bg-danger{{/es_correcta}}
                                    text-white rounded">
                                    {{descripcion}}
                                </li>
                            {{/respuestas}}
                        </ul>
                    </div>
                    <div class="card-footer text-center">

                        <form method="POST" action="/editor/manejoAccionReporte" class="d-inline">
                            <input type="hidden" name="idPregunta" value="{{id_pregunta}}">
                            <input type="hidden" name="accion" value="darDeAlta">
                            <button type="submit" class="btn btn-success me-2">Dar de Alta</button>
                        </form>

                        <form method="POST" action="/editor/manejoAccionReporte" class="d-inline">
                            <input type="hidden" name="idPregunta" value="{{id_pregunta}}">
                            <input type="hidden" name="accion" value="darDeBaja">
                            <button type="submit" class="btn btn-danger me-2">Dar de Baja</button>
                        </form>

                        <form method="POST" action="/editor/mostrarFormularioEdicionPregunta" class="d-inline">
                            <input type="hidden" name="idPregunta" value="{{id_pregunta}}">
                            <button type="submit" class="btn btn-warning">Modificar</button>
                        </form>

                    </div>
                </div>
            </div>
        {{/preguntasReportadas}}

        {{^preguntasReportadas}}
            <div class="col-12">
                <div class="alert alert-info text-center" role="alert">
                    No hay preguntas reportadas.
                </div>
            </div>
        {{/preguntasReportadas}}
    </div>
</div>
